    ascii_letters['Z_row4']="  / /  "
    ascii_letters['Z_row5']=" / /__ "
    ascii_letters['Z_row6']="/_____|"
else
    ascii_letters[A_row1]=" â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  "
    ascii_letters[A_row2]="â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•— "
    ascii_letters[A_row3]="â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘ "
    ascii_letters[A_row4]="â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘ "
    ascii_letters[A_row5]="â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘ "
    ascii_letters[A_row6]="â•šâ•â•  â•šâ•â• "
    ascii_letters[B_row1]="â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  "
    ascii_letters[B_row2]="â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•— "
    ascii_letters[B_row3]="â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â• "
    ascii_letters[B_row4]="â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•— "
