    ascii_letters[C_row3]="â–ˆâ–ˆâ•‘      "
    ascii_letters[C_row4]="â–ˆâ–ˆâ•‘      "
    ascii_letters[C_row5]="â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— "
    ascii_letters[C_row6]=" â•šâ•â•â•â•â•â• "
    ascii_letters[D_row1]="â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  "
    ascii_letters[D_row2]="â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•— "
